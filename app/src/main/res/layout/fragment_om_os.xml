<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moroPurpleBackground"
    tools:context=".AboutUsFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="154dp"
        android:layout_height="49dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="@string/om_os"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/omOs_ImageView"
        android:layout_width="361dp"
        android:layout_height="266dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/omoms_temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="355dp"
        android:layout_height="321dp"
        android:layout_marginTop="20dp"
        android:text="@string/om_os_maintext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/omOs_ImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>